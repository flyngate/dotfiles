{
  "suggest.noselect": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "html",
    "css",
    "markdown",
    "mdx"
  ],
  "list.source.grep.command": "ag",
  "languageserver": {
    "gleam": {
      "command": "gleam",
      "args": ["lsp"],
      "filetypes": ["gleam"],
      "rootPatterns": ["gleam.toml", ".git"]
    }
  },
  "typescript.format.enabled": false,
  "clangd.fallbackFlags": ["-std=c++20", "-I/opt/homebrew/include"],
  "clangd.arguments": [],
  "svelte.enable-ts-plugin": true
}
